<div class="grid grid-cols-12">
  <aside class="col-span-2 _bg-gray-50 border-r">
    <header class="flex px-2 py-2 bg-white items-center border-b">
      <div class="mr-2 flex-shrink-0">
        <a href="#" class="cursor-pointer flex items-center">
          <img
            src="https://pipeline.mediumra.re/assets/img/avatar-male-<%= user.id %>.jpg"
            alt=""
            class="w-12 h-12 rounded-full"
          />
        </a>
      </div>
      <div>
        <h1 class="font-medium">
          <a href="#" class="cursor-pointer text-ellipsis"
            ><%= user.username %></a
          >
        </h1>
        <p class="text-gray-700 text-sm text-ellipsis"><%= user.email %></p>
      </div>
    </header>

    <div>
      <!-- logout -->
      <a href="/logout">Logout</a>
      <hr />
      <% users.forEach((user) => { %>
      <div
        class="flex items-center p-4 border-b hover:bg-gray-100 cursor-pointer"
        onclick="setRecipient('<%= user.id %>')"
      >
        <div class="mr-2">
          <img
            src="https://pipeline.mediumra.re/assets/img/avatar-male-4.jpg"
            alt=""
            class="w-8 h-8 rounded-full"
          />
        </div>
        <div>
          <h1 class="text-ellipsis font-medium"><%= user.username %></h1>
        </div>
      </div>
      <% }); %>
    </div>
  </aside>
  <main class="col-span-10">
    <div class="flex flex-col h-screen justify-between">
      <header class="p-4 text-gray-700 bg-green-50">
        <h1 class="text-2xl font-semibold">Alice</h1>
      </header>
      <main class="flex-1 overflow-y-auto p-4">
        <ul id="messages"></ul>
      </main>
      <footer class="bg-green-100 p-4">
        <form action="" id="form">
          <div class="input-group mb-3">
            <input
              type="text"
              id="input"
              class="form-control"
              autocomplete="off"
            />
            <button class="btn btn-outline-secondary" type="submit">
              Send Message
            </button>
          </div>
        </form>
      </footer>
    </div>
  </main>
</div>

<!-- /.conainer-fluid -->
<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io({
    auth: {
      serverOffset: 0,
    },
  });
</script>
<script>
  const form = document.getElementById("form");
  const input = document.getElementById("input");
  const messages = document.getElementById("messages");
</script>

<script>
  var recipientId = null;
  function setRecipient(id) {
    recipientId = id;
    console.log(recipientId);
  }

  // direct message
  form.addEventListener("submit", (e) => {
    e.preventDefault();

    const message = input.value;
    console.log(message);
    if (message && recipientId) {
      socket.emit("direct message", { recipientId, message });
      form.reset();
    }
  });
</script>

<script>
  socket.on("direct message", (data) => {
    console.log(data);
    const li = document.createElement("li");
    li.textContent = data.message;
    messages.appendChild(li);
  });
</script>
