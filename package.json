{
  "name": "prochat-enterprise",
  "version": "2.0.0",
  "description": "Enterprise-grade real-time chat application backend with TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run fix-paths",
    "fix-paths": "find dist -name '*.js' -exec sed -i '' 's|@/|./|g' {} \\;",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start",
    "dev:watch": "nodemon --watch src --ext ts --exec \"npm run dev\"",
  "test": "NODE_OPTIONS=--experimental-vm-modules jest",
  "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
  "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "migration:run": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback",
    "seed:run": "knex seed:run"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "resolver": "ts-jest-resolver",
    "testEnvironment": "node",
    "maxWorkers": 1,
    "forceExit": true,
    "detectOpenHandles": true,
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "<rootDir>/tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup-env.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": [],
  "author": "Abdessamad EL FEDALI",
  "license": "ISC",
  "dependencies": {
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "connect-session-knex": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^8.0.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "socket.io": "^4.7.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
